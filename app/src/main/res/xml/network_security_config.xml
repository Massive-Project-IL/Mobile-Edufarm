<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Izinkan koneksi ke server tertentu, misalnya localhost atau pengaturan khusus -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- untuk emulator Android -->
        <domain includeSubdomains="true">192.168.1.6</domain>  <!-- Ganti dengan IP atau domain yang sesuai -->
    </domain-config>
</network-security-config>
